{
  "name": "clinic-management-system",
  "version": "1.0.0",
  "description": "Modern clinic management system with Next.js frontend and NestJS backend",
  "scripts": {
    "install:frontend": "cd fronddesk && npm install",
    "install:backend": "cd backend && npm install",
    "build:frontend": "cd fronddesk && npm run build",
    "build:backend": "cd backend && npm run build",
    "start:frontend": "cd fronddesk && npm start",
    "start:backend": "cd backend && npm run start:prod",
    "dev:frontend": "cd fronddesk && npm run dev",
    "dev:backend": "cd backend && npm run start:dev"
  },
  "dependencies": {
    "@geist-ui/react": "^2.2.5"
  }
}
